import React from 'react';
import { View, Button } from 'react-native';
import SendSMS from 'react-native-sms';

const App = () => {
  const sendSMS = () => {
    const phoneNumber = '123456789'; // Replace with the recipient's phone number
    const message = 'Hello, this is a test SMS!'; // Replace with your message

    SendSMS.send(
      {
        body: message,
        recipients: [phoneNumber],
        successTypes: ['sent', 'queued'],
        allowAndroidSendWithoutReadPermission: true, // Set to true if you want to send without READ_SMS permission
      },
      (completed, cancelled, error) => {
        console.log('SMS Callback: completed: ' + completed + ' cancelled: ' + cancelled + 'error: ' + error);
      }
    );
  };

  return (
    <View>
      <Button title="Send SMS" onPress={sendSMS} />
    </View>
  );
};

export default App;

